<Page x:Class="CrosswordApp.CrosswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CrosswordApp" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CrosswordPage"
      Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="CrosswordContent"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0"
                Grid.ColumnSpan="2"
                Background="{StaticResource DarkTextColor}">

        </Border>

        <TextBlock Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Style="{DynamicResource MaterialDesignHeadline4TextBlock}"
                   FontWeight="Black"
                   Margin="40 0"
                   Foreground="White"
                   TextWrapping="Wrap"
                   VerticalAlignment="Center">
            Создание кроссворда
        </TextBlock>

        <Border Grid.Row="1"
                Grid.Column="1"
                Background="White">

        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer Padding="8 8"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                <Grid Grid.Row="1" Width="Auto">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid x:Name="CrosswordGrid"
                          HorizontalAlignment="Center">

                    </Grid>

                    <TextBox x:Name="OutputTextBox"
                             Grid.Row="1"
                             HorizontalAlignment="Left"
                             TextWrapping="Wrap">

                    </TextBox>
                </Grid>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer Padding="8 16">
                <StackPanel Orientation="Vertical">
                    <Grid Margin="0 8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock VerticalAlignment="Center" Margin="0 0 8 0">
                            Отобразить слова
                        </TextBlock>

                        <CheckBox x:Name="ShowLettersCheckBox"
                                  Margin="8 0 16 0"
                                  Grid.Column="1"
                                  Checked="ShowLettersCheckBox_Checked"
                                  Unchecked="ShowLettersCheckBox_Unchecked"
                                  Style="{DynamicResource MaterialDesignSwitchToggleButton}">
                            
                        </CheckBox>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BackButton"
                    Margin="8"
                Grid.Column="0"
                        FontSize="13"
                    HorizontalAlignment="Stretch"
                    Style="{StaticResource SecondaryButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ChevronLeft" Margin="0 0 8 0" VerticalAlignment="Center">
                        </materialDesign:PackIcon>

                        <TextBlock Margin="0 0" VerticalAlignment="Center">
                            Назад
                        </TextBlock>
                    </StackPanel>
                </Button>

                <Button x:Name="NextButton"
                    Margin="8"
                Grid.Column="1"
                        FontSize="13"
                        Foreground="{StaticResource DarkTextColor}"
                    HorizontalAlignment="Stretch"
                    Style="{StaticResource PrimaryButton}"
                    Click="GenerateButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0 0" VerticalAlignment="Center">
                            Далее
                        </TextBlock>
                        <materialDesign:PackIcon Kind="ChevronRight" Margin="8 0 0 0" VerticalAlignment="Center">
                        </materialDesign:PackIcon>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
